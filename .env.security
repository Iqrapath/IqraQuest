# Security Configuration
# Copy these settings to your .env file and adjust as needed

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_COMPROMISED_THRESHOLD=0

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_LOGIN_DECAY=1
RATE_LIMIT_API=60
RATE_LIMIT_API_DECAY=1

# Session Security
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=true
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
SESSION_TIMEOUT=120

# Authentication
AUTH_PASSWORD_TIMEOUT=900

# IP Blocking
IP_BLOCKING_ENABLED=true
IP_BLOCKING_MAX_ATTEMPTS=10
IP_BLOCKING_DURATION=60

# File Upload Security
FILE_UPLOAD_MAX_SIZE=10240
FILE_UPLOAD_SCAN_MALWARE=false

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true

# Production Settings (IMPORTANT!)
# When deploying to production, ensure these are set:
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
SESSION_SECURE_COOKIE=true
